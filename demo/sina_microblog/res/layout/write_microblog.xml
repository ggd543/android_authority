<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="top">
	<Gallery android:id="@+id/gyWriteMBFun" android:layout_width="fill_parent"
		android:layout_height="90dp" />
	<EditText android:id="@+id/etWriteMicroBlog"
		android:layout_width="fill_parent" android:lines="3"
		android:layout_height="wrap_content" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="right">

		<TextView android:id="@+id/tvRemainWordCount"
			android:layout_width="160dp" android:layout_height="wrap_content"
			android:text="可输入字数：140" android:layout_marginTop="10dp" />

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="right">
			<Button android:id="@+id/btnPostNewMicroBlog"
				android:layout_width="80dp" android:layout_height="wrap_content"
				android:text="发布" />
		</LinearLayout>
	</LinearLayout>


	<ImageView android:id="@+id/ivMicroBlogImage"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
	 android:background="#222222" android:scaleType="fitCenter" />

</LinearLayout>
